{
  "packages": ["packages/*"],
  "version": "0.1.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["!*.ts", "*.test.ts"],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": "main",
      "message": "chore(release): publish %s"
    }
  }
}
