{
  "name": "vivace",
  "private": true,
  "scripts": {
    "bootstrap": "npm install --workspaces",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build --watch tsconfig.build.json",
    "lint": "eslint --cache --fix --ext ts .",
    "test": "jest",
    "test:watch": "jest --watch",
    "ci:changed": "! git diff --quiet ${GITHUB_BASE_REF}...${GITHUB_REF} -- packages/*/{src,package.json}",
    "ci:lint": "eslint --cache --ext ts .",
    "ci:test": "jest --ci --bail --onlyChanged",
    "prepare": "husky install",
    "release": "lerna publish --yes",
    "changelog": "git log --pretty=format:'%s' main...HEAD",
    "version": "lerna version --conventional-commits",
    "watch": "npm run watch --workspaces"
  },
  "author": "David Nu√±ez <david.nunez@alumni.stanford.edu> (https://davidanunez.com/)",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/cz-commitlint": "^13.1.0",
    "@commitlint/format": "^13.1.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-jest": "^27.0.6",
    "babel-plugin-const-enum": "^1.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dnunez24/vivace.git"
  }
}
